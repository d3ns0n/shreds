<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.d3ns0n.shreds">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SandyDesertNight">
        <activity
            android:name=".view.activity.ShredListActivity"
            android:label="@string/app_name"
            android:theme="@style/SandyDesertNight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShredDetailActivity"
            android:label="@string/title_shred_detail"
            android:parentActivityName=".view.activity.ShredListActivity"
            android:theme="@style/SandyDesertNight">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.d3ns0n.shreds.view.activity.ShredListActivity" />
        </activity>
    </application>

</manifest>
